from item import Item


class Recruit_Sword(Item):
    def __init__(self):
        self.__name = "Recruit's Sword"
        self.__stats = {
            "pp" : 15
        }
        self.__description = "test."
        self.__cost = 350

    def get_info(self):
        desc = f"Skill: {self.__description} \nCost: {self.__cost}"
        return desc
    
    def use(self, user, target):
        pass

    def get_stats(self):
        return self.__stats